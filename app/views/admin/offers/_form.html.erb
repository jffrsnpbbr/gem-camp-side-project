<%= form_with model: offer, url: path do |form| %>
  <% if offer.errors.any? %>
    <ul>
      <% offer.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :genre %>
    <%= form.text_field :genre, class: 'form-control' %>
  </div>
  <div  class="mb-3">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(Offer.statuses.map{|key, value | [key.humanize, key]}), { :prompt => 'Select Status' }, { class: 'form-control', required: true } %>
  </div>
  <div class="mb-3">
    <%= form.label :amount, class: 'form-label' %>
    <%= form.number_field :amount, { class: 'form-control', required: true } %>
  </div>
  <div class="mb-3">
    <%= form.label :coins, class: 'form-label' %>
    <%= form.number_field :coins, { class: 'form-control', required: true } %>
  </div>
  <%= form.submit :submit, class: 'btn btn-outline-success' %>
<% end %>
