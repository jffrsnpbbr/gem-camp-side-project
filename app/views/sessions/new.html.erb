<%= render partial: 'home/navbar' %>
<%= render 'home/login_register_tab' %>
<main class='container text-center w-50 mx-auto'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-floating mb-3">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'form-control', placeholder: 'Username' %>
      <%= f.label :username, class: 'form-label' %>
    </div>

    <div class="form-floating mb-3">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>
      <%= f.label :password, class: 'form-label' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3 text-start">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'w-100 btn btn-lg btn-primary' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' if request.host == 'client.com' %>
</main>
<%= render partial: 'home/footer' %>